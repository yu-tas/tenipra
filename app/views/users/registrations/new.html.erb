<div class="header text-center py-3">
    <h1>ユーザー新規登録</h1>
  </div>

  <div class="container registration-container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', placeholder: '名前' %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'メールアドレス' %>
      </div>

      <div class="form-group">
        <%= f.label :profile_image %>
        <%= f.file_field :profile_image, class: 'form-control-file' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %>
        <%= f.password_field :password, class: 'form-control', autocomplete: "new-password", placeholder: 'パスワード' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password", placeholder: 'パスワード' %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
