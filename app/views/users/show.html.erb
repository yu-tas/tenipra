<div class="container detail-container my-5">
  <div class="row">
    <div class="col-md-4 text-center image-info">
      <h1><%= @user.name %>さんのページ</h1>
      <% if @user.profile_image.attached? %>
        <%= image_tag @user.profile_image.variant(resize: "200x200"), class: "profile-image img-thumbnail" %>
      <% else %>
        <%= image_tag asset_path('default_profile_image.jpg'), alt: "デフォルトプロフィール画像", class: "profile-image img-thumbnail", size: "200x200" %> 
      <% end %>
      <% if @user == current_user %>
        <p class="mt-2">メールアドレス: <%= @user.email %></p>
      <% end %>
    </div>
    <div class="col-md-8 mt-4 mt-md-0">
      <div class="actions">
        <%= link_to "一覧画面へ", menus_path, class: "btn btn-outline-primary mr-2" %>
        <%= link_to 'お気に入り一覧', user_favorites_path(@user), class: "btn btn-outline-primary mr-2" %>
        <% if @user == current_user %>
          <%= link_to "プロフィールの編集", edit_user_path, class: "btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
